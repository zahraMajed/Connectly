<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeekerInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/fName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="First Name"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/fNameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fName"
                android:text="Ahmed"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/lName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fNameShow"
                android:layout_marginTop="10dp"
                android:text="Last Name"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/lNameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lName"
                android:text="Mohammed"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lNameShow"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/emailShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:text="Ahmed@gmail.com"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailShow"
                android:layout_marginTop="10dp"
                android:text="Phone Number"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/phoneShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:text="966511222333"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneShow"
                android:layout_marginTop="10dp"
                android:text="Age"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/ageShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age"
                android:text="25"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/bDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ageShow"
                android:layout_marginTop="10dp"
                android:text="Birth Date"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/bDateShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bDate"
                android:text="05 April 1994"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bDateShow"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/genderShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:text="Male"
                android:textColor="#917BB1"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/genderShow"
                android:layout_marginTop="10dp"
                android:text="CV Uploaded"
                android:textSize="22dp"
                android:textColor="#B2BABB"/>
            <TextView
                android:id="@+id/cvShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CV"
                android:text="AhmedCV.pdf"
                android:textColor="#917BB1"
                android:textSize="22dp" />


        </RelativeLayout>
    </ScrollView>


</FrameLayout>

